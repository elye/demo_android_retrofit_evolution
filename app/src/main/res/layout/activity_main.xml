<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.elyeproj.wikisearchcount.MainActivity">

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_search_string"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_search_execute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Search Count Execute" />

    <Button
        android:id="@+id/btn_search_enqueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Search Count Enqueue" />

    <Button
        android:id="@+id/btn_search_rx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Search Count Rx Single" />

    <Button
        android:id="@+id/btn_search_suspend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Search Count Coroutine Defer" />

    <Button
        android:id="@+id/btn_search_defer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Search Count Coroutine Suspend" />

    <TextView
        android:id="@+id/txt_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp" />

</LinearLayout>
